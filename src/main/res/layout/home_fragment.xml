<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:fillViewport="false"
    android:background="#cdcdcd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending Shows"
            style="@style/CardTitle.1line"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/button"
            android:layout_toLeftOf="@+id/button"
            android:gravity="center_vertical"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAllCaps="true"
            android:text="See More"
            android:gravity="center_vertical"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewTrendingShows"
            android:layout_below="@+id/textView"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending Movies"
            android:gravity="center_vertical"
            style="@style/CardTitle.1line"
            android:id="@+id/textView2"
            android:layout_below="@+id/viewTrendingShows"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/button2"
            android:layout_alignBottom="@+id/button2"/>

        <Button

            style="?android:attr/buttonStyleSmall"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textAllCaps="true"
            android:text="See More"
            android:id="@+id/button2"
            android:layout_below="@+id/viewTrendingShows"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/viewTrendingMovies"
            android:layout_below="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend's Activity"
        android:gravity="center_vertical"
        style="@style/CardTitle.1line"
        android:id="@+id/textView3"
        android:layout_below="@+id/viewTrendingMovies"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/button3"
        android:layout_alignBottom="@+id/button3"/>

    <Button

        style="?android:attr/buttonStyleSmall"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:text="See More"
        android:id="@+id/button3"
        android:layout_below="@+id/viewTrendingMovies"
        android:layout_alignParentRight="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/viewSocial"
            android:layout_below="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"/>

    </RelativeLayout>


</ScrollView>